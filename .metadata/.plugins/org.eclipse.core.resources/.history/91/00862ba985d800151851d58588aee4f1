class UI:
    
    def __init__(self, contr):
        
        self._contr = contr 
        
        
    def menu(self):
        print("0 - Exit")
        print("1 - Add to File")
    
        
    def start(self):
        
        while True:
            
            self.menu()
            cmd = int(input("Give a command: "))
            
            if cmd == 0:
                break
            
            if cmd == 1:
                sent = input("Give atr1: ")
                self._contr.add(sent)
                 